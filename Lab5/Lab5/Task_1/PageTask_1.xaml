<Page x:Class="Lab5.Task_1.PageTask_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Lab5.Task_1"
      mc:Ignorable="d"
      Title="Graph Editor" Height="600" Width="800">
    <Grid>
        
        <!-- Канвас для отображения графа -->
        <Canvas Name="GraphCanvas" Background="White" Margin="10,50,10,10" 
                MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_PreviewMouseUp">
            <!-- Узлы и рёбра будут рисоваться здесь -->
        </Canvas>
    </Grid>
</Page>
